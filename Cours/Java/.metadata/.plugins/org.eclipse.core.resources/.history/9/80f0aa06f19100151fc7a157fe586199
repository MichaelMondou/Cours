package hex;

import java.awt.Color;
import java.util.ArrayList;
import java.util.Collection;
import java.util.Collections;

public class Grille {

	static final int nbLignes = 7;
	static final int nbColonnes = 7;

	private ArrayList<ArrayList<Cellule>> cellules = new ArrayList<ArrayList<Cellule>>();

	public Grille() {
		int abscisse = 0;
		int ordonate = 0;

		for (int i = 0; i < nbLignes; i++) {
			ArrayList<Cellule> temp_cells = new ArrayList<Cellule>();
			for (int j = 0; j < nbColonnes; j++) {
				abscisse = 170 + i * 49;
				ordonate = 250 + j * 55;
				temp_cells.add(new Cellule(abscisse, ordonate, j, i, Color.GRAY));
			}
			getCell().add(temp_cells);
		}
		setTheGrid();
	}

	/**
	 * Permet de mettre le plateau en décalé
	 */
	public void setTheGrid() {
		for (int i = 0; i < Grille.nbLignes; i++) {
			for (int j = 0; j < Grille.nbColonnes; j++) {
				int ordonate = this.getCell().get(i).get(j).getY();
				ordonate -= 27 * i;
				this.getCell().get(i).get(j).setY(ordonate);
				this.getCell().get(i).get(j).creerPolygon();
			}
		}
	}

	public ArrayList<ArrayList<Cellule>> getCell() {
		return cellules;
	}

	public void setCellules(ArrayList<ArrayList<Cellule>> cell) {
		this.cellules = cell;
	}
}
