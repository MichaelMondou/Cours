package hex;

import java.awt.Color;
import java.util.ArrayList;

public class Joueur {
	
	private String nom;
	private int identite;
	private Color couleur;
	private ArrayList<Cellule> cellules_du_joueur;
	private int zone=1;
	private static int id = 0;

	public Joueur(String nom, Color couleur)
	{
		this.nom=nom;
		this.couleur=couleur;
		cellules_du_joueur=new ArrayList<Cellule>();
		this.identite = id;
		id++;
	}

	public void ajouterCellule(Cellule cellule)
	{
		this.cellules_du_joueur.add(cellule);
	}
	
	public String getNom() {
		return nom;
	}
	public void setNom(String nom) {
		this.nom = nom;
	}
	public Color getCouleur() {
		return couleur;
	}
	public void setColor(Color color) {
		this.couleur = color;
	}
	public ArrayList<Cellule> getPlayer_cells() {
		return cellules_du_joueur;
	}

	public void setPlayer_cells(ArrayList<Cellule> player_cells) {
		this.cellules_du_joueur = player_cells;
	}

	public int getZone() {
		return zone;
	}

	public void setZone(int zone) {
		this.zone = zone;
	}

	public void upZone() {
		this.zone=zone+1;
		
	}

	public void updateZone() {
		int max=1;
		for(int i=0;i<cellules_du_joueur.size();i++)
		{
			if(cellules_du_joueur.get(i).getZone()>max)
				max=cellules_du_joueur.get(i).getZone()+1;
		}
	}
	
	public int getIdentity() {
		return identite;
	}

	public void setIdentity(int identity) {
		this.identite = identity;
	}
}
