package hex;

import java.awt.Color;
import java.util.ArrayList;

public class Player {
	
	private String name;
	private Color color;
	private ArrayList<Cell> cellules_joueur;
	private int zone=1;
	
	public Player(String nom, Color couleur)
	{
		this.name=nom;
		this.color=couleur;
		cellules_joueur=new ArrayList<Cell>();
	}
	
	public void ajoutCellule(Cell cellule)
	{
		this.cellules_joueur.add(cellule);
	}
	
	public String getNom() {
		return name;
	}
	public void setNom(String nom) {
		this.name = nom;
	}
	public Color getColor() {
		return color;
	}
	public void setCouleur(Color couleur) {
		this.color = couleur;
	}
	public ArrayList<Cell> getCell_player() {
		return cellules_joueur;
	}
	public void setCellules_joueur(ArrayList<Cell> cellules_joueur) {
		this.cellules_joueur = cellules_joueur;
	}

	public int getZone() {
		return zone;
	}

	public void setZone(int zone) {
		this.zone = zone;
	}

	public void upZone() {
		// TODO Auto-generated method stub
		this.zone=zone+1;
		
	}

	public void updateZone() {
		// TODO Auto-generated method stub
		int max=1;
		for(int i=0;i<cellules_joueur.size();i++)
		{
			if(cellules_joueur.get(i).getZone()>max)
				max=cellules_joueur.get(i).getZone()+1;
			
		}
		
	}

}
