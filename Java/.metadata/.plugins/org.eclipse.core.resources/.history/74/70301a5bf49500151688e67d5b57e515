package hex;

import java.util.Observer;

import javax.swing.JPanel;

import general.Fenêtre;

public abstract class Vue implements Observer {

	private Modèle modele;
	private Controleur controleur;

	protected Fenêtre fenetre;
	protected JPanel panel;

	Vue(Fenêtre fenetre, Modèle modele, Controleur controleur) {
		this.setModele(modele);
		modele.addObserver(this);
		this.setControleur(controleur);
		this.fenetre = fenetre;
		panel = fenetre.getPanel();
	}

	public Modèle getModele() {
		return modele;
	}

	public void setModele(Modèle modele) {
		this.modele = modele;
	}

	public Controleur getControleur() {
		return controleur;
	}

	public void setControleur(Controleur controleur) {
		this.controleur = controleur;
	}
}
