package mvc;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JInternalFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;

public abstract class View_Button extends View{
	
	private JLabel label;
	
	private JTextField text;
	
	private JButton more;
	private JButton less;
	
	public View_Button(){
		getJif().setSize(325, 180);
		
		label = new JLabel();
		label.setFont(getFont());
		label.setBounds(90,  10,  150,  20);
		
		text = new JTextField();
		text.setFont(getFont());
		text.setBounds(65,  50,  200,  30);
		
		more = new JButton("+");
		more.setFont(getFont());
		more.setBounds(90,  10,  150,  20);
		
		less = new JButton("-");
		less.setFont(getFont());
		
	}

	public JLabel getLabel() {
		return label;
	}

	public JTextField getText() {
		return text;
	}

	public JButton getMore() {
		return more;
	}

	public JButton getLess() {
		return less;
	}
	
}
