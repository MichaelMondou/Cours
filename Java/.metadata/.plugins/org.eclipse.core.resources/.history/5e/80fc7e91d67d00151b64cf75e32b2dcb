package mvc;

import MainPackage.Event;
import MainPackage.View;

public class Controller {
	
	private Model model;
	
	public Controller(Model model){
		this.model = model;
	}
	
	public void Action(View object, Event event) {
		switch (event) {
		case UPCELSIUS:
			model.plusCelsius();
			break;
		case MINUSCELSIUS:
			getModel().minusCelsius();
			break;
		case PLUSFARENHEIT:
			getModel().plusFarenheit();
			break;
		case MINUSFARENHEIT:
			getModel().minusFarenheit();
			break;
		case SCROLL_TEMP:
			getModel().changeScroll(object);
			break;
		default:
			break;
		}
	}

}
