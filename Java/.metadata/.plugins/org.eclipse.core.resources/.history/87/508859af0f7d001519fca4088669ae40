package mvc;

import java.util.Observable;

public class Model extends Observable {
	
	private float temperature_celsius = 20;

	public float getC() {
		return temperature_celsius;
	}

	public void setC(float tempC) {
		temperature_celsius = tempC;
		setChanged();
		notifyObservers();
	}

	public float getF() {
		return temperature_celsius * 9 / 5 + 32;
	}

	public void setF(float tempF) {
		temperature_celsius = (tempF - 32) * 5 / 9;
		setChanged();
		notifyObservers();
	}
}
