package hex;

import java.awt.Color;
import java.util.ArrayList;

public class Joueur {
	
	private String nom;
	private int identity;
	private Color color;
	private ArrayList<Cellule> player_cells;
	private int zone=1;
	private static int id = 0;

	public Joueur(String name, Color color)
	{
		this.nom=name;
		this.color=color;
		player_cells=new ArrayList<Cellule>();
		this.identity = id;
		id++;
	}

	public void addCell(Cellule cell)
	{
		this.player_cells.add(cell);
	}
	
	public String getName() {
		return nom;
	}
	public void setName(String name) {
		this.nom = name;
	}
	public Color getColor() {
		return color;
	}
	public void setColor(Color color) {
		this.color = color;
	}
	public ArrayList<Cellule> getPlayer_cells() {
		return player_cells;
	}

	public void setPlayer_cells(ArrayList<Cellule> player_cells) {
		this.player_cells = player_cells;
	}

	public int getZone() {
		return zone;
	}

	public void setZone(int zone) {
		this.zone = zone;
	}

	public void upZone() {
		this.zone=zone+1;
		
	}

	public void updateZone() {
		int max=1;
		for(int i=0;i<player_cells.size();i++)
		{
			if(player_cells.get(i).getZone()>max)
				max=player_cells.get(i).getZone()+1;
		}
	}
	
	public int getIdentity() {
		return identity;
	}

	public void setIdentity(int identity) {
		this.identity = identity;
	}
}
