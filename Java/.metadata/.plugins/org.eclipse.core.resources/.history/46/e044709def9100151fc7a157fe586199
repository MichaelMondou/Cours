package hex;

import java.util.Observer;

import javax.swing.JPanel;

public abstract class View implements Observer {

	private Modèle model;
	private Contrôleur controller;

	protected Window window;
	protected JPanel panel;

	View(Window window, Modèle model, Contrôleur controller) {
		this.setModel(model);
		model.addObserver(this);
		this.setController(controller);
		this.window = window;
		panel = window.getPanel();
	}

	public Modèle getModel() {
		return model;
	}

	public void setModel(Modèle model) {
		this.model = model;
	}

	public Contrôleur getController() {
		return controller;
	}

	public void setController(Contrôleur controller) {
		this.controller = controller;
	}
}
