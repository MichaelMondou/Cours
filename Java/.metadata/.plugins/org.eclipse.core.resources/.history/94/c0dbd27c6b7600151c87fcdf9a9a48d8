package Hex;

import java.awt.Color;
import java.util.ArrayList;

public class Model extends Observable{
	
	private ArrayList<Controller> model_controllers = new ArrayList<Controller>();
	private ArrayList<View> views = new ArrayList<View>();
	
	private Cellule[] plateau;

	public void nextData() {

	}
	
	public void initialisation(){
		plateau = new Cellule[3];
		Cellule c = new Cellule(150, 50, 0, 0, Color.GRAY);
		Cellule c2 = new Cellule(50, 50, 0, 0, Color.GRAY);
		Cellule c3 = new Cellule(350, 50, 0, 0, Color.GRAY);
		c.creerPolygone();
		c2.creerPolygone();
		c3.creerPolygone();
		plateau[0] = c;
		plateau[1] = c2;
		plateau[2] = c3;
	}
	
	public Cellule[] getPlateau() {
		return plateau;
	}

	public void setPlateau(Cellule[] plateau) {
		this.plateau = plateau;
	}
	

}
