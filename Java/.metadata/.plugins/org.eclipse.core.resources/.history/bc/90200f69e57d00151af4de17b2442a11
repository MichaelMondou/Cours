package mvc;

/**
 * Contrôleur de l'application permettant de contrôler les événements de la vue
 * et de modifier le modèle en conséquence.
 */
public class Controller {

	private Model model;

	public Controller(Model model) {
		this.model = model;
	}

	/**
	 * Permet de gérer les événements de la vue en appelant les bonnes méthodes du modèle.
	 */
	public void Action(View object, Event event) {
		switch (event) {
		case UPCELSIUS:
			model.upCelsius();
			break;
		case DOWNCELSIUS:
			model.downCelsius();
			break;
		case UPFARENHEIT:
			model.upFarenheit();
			break;
		case DOWNFARENHEIT:
			model.downFarenheit();
			break;
		case SCROLL:
			model.Scroll(object);
			break;
		default:
			break;
		}
	}
}
