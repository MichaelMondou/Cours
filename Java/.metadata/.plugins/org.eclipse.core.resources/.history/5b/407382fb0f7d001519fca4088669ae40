package mvc;

public class Controller {
    private Model model;
    private View view = null;
    private ModifieTemperature modtemp = new ModifieTemperaturePlus1();

    public Controller(Model m) {
            model = m;
    }

    public void augmenteDegresC(){
            model.setCelsius(modtemp.augmenteDegres(model.getCelsius()));
            control();
    }

    public void diminueDegresC(){
            model.setCelsius(modtemp.diminueDegres(model.getCelsius()));
            control();
    }

    public void fixeDegresC(float tempC){
            model.setCelsius(tempC);
            control();
    }

    public void augmenteDegresF(){
            model.setF(modtemp.augmenteDegres(model.getF()));
            control();
    }

    public void diminueDegresF(){
            model.setF(modtemp.diminueDegres(model.getF()));
            control();
    }

    public void fixeDegresF(float tempF){
            model.setF(tempF);
            control();
    }

    public void control() {
            if (view != null) {
                    if (model.getCelsius() > 40.0) {
                            view.enableWarningColor();
                    } else {
                            view.disableWarningColor();
                    }
            }
    }

    public void addView(View view) {
            this.view = view;
    }
}
