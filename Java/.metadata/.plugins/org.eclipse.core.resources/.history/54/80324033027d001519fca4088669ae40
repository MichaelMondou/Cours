package mvc;

import java.awt.Event;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;
import java.util.Iterator;

public class Controller implements ActionListener {

	private ArrayList<View> controller_views = new ArrayList<View>();

	private Model model;

	public Controller(Model model) {
		this.model = model;
	}

	public void upCelsius() {
		model.upTemperature_celsius(1);
	}

	public void downCelsius() {
		model.downTemperature_celsius(1);
	}

	public void fixCelsius(float temp) {
		model.setTemperature_celsius(temp);
	}

	public void upFarenheit() {
		model.upTemperature_farenheit(1);
	}

	public void downFarenheit() {
		model.downTemperature_farenheit(1);
	}

	public void fixFarenheit(float temp) {
		model.setTemperature_farenheit(temp);
	}

	public void addView(View view) {
		controller_views.add(view);
	}
	
	public void updateAllTheViews(){
		Iterator<View> it = controller_views.iterator();
		 
		while (it.hasNext()) {
		
		}
	}

	public void actionPerformed(ActionEvent e) {

	}

	public void action(View view, Event event) {

	}

}
