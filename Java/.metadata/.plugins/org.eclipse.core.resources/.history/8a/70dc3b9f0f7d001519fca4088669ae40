package mvc;

import java.util.Observable;

public class Model extends Observable {
	
	private float temperatureC = 20;

	public float getC() {
		return temperatureC;
	}

	public void setC(float tempC) {
		temperatureC = tempC;
		setChanged();
		notifyObservers();
	}

	public float getF() {
		return temperatureC * 9 / 5 + 32;
	}

	public void setF(float tempF) {
		temperatureC = (tempF - 32) * 5 / 9;
		setChanged();
		notifyObservers();
	}
}
