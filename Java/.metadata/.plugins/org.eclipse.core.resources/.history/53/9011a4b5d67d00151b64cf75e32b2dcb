package mvc;

import MainPackage.Event;
import MainPackage.View;

public class Controller {
	
	private Model model;
	
	public Controller(Model model){
		this.model = model;
	}
	
	public void Action(View object, Event event) {
		switch (event) {
		case UPCELSIUS:
			model.upCelsius();
			break;
		case DOWNCELSIUS:
			model.downCelsius();
			break;
		case UPFARENHEIT:
			model.upFarenheit();
			break;
		case DOWNFARENHEIT:
			model.donwFarenheit();
			break;
		case SCROLL:
			model.Scroll(object);
			break;
		default:
			break;
		}
	}

}
