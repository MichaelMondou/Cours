package mvc;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Observable;

import MainPackage.Event;

public class ViewButtonCelsius extends ViewButton{
	
	View currentObject = this;

	ViewButtonCelsius(Model model, Controller controller, String title) {
		super(model, controller, title);
		getJif().setLocation(0,0);
		
		setDisplay("" + model.getCelsius());
		
		getUpJButton().addActionListener( new ActionListener()
		{
		    public void actionPerformed(ActionEvent e)
		    {
		    	controller.Action(currentObject, Event.PLUSCELSIUS);
		    }
		});
		
		getDownJButton().addActionListener( new ActionListener()
		{
		    public void actionPerformed(ActionEvent e)
		    {
		    	controller.Action(currentObject, Event.MINUSCELSIUS);
		    }
		});
		
	}

	@Override
	public void update(Observable o, Object arg) {
		setDisplay("" + model.getCelsius());
	}
	
	

}
