package mvc;

import java.util.Observable;
import javax.swing.JSlider;

public abstract class ViewScroll extends View{
	
	protected JSlider sliderTemp;

	ViewScroll(Window window, Model model, Controller controller, String title) {
		super(window, model, controller, title);
		
		sliderTemp = new JSlider();
		sliderTemp.setOrientation(1);
		sliderTemp.setValue(0);
		sliderTemp.setMaximum(50);
		sliderTemp.setMinimum(-50);
	    sliderTemp.setMajorTickSpacing(10);
	    sliderTemp.setMinorTickSpacing(2);
	    sliderTemp.setPaintTicks(true);
	    sliderTemp.setPaintLabels(true);
		jPanel.add(sliderTemp);
		
	}
	
	

}
