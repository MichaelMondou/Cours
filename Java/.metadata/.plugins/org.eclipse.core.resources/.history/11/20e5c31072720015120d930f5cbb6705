package Hex;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Polygon;
import java.util.ArrayList;

import javax.swing.JPanel;


public class Forme extends JPanel {
	public void paintComponent(Graphics g) {
		Polygon p = new Polygon();
		
		/*Coordonées graphiques*/
		double arc = (Math.PI * 2) / 6;
		int x = 375;
		int y = 275;
		for (int i = 0; i <= 6; i++) {
			p.addPoint((int) Math.round(x + 50 * Math.cos(arc * i)),
					(int) Math.round(y + 50 * Math.sin(arc * i)));
		}
		
		/*Couleur*/
		g.setColor(Color.ORANGE);
		g.fillPolygon(p);
		
		ArrayList<ArrayList<String>> k=new ArrayList();
	    ArrayList<String> l=new ArrayList();
	    l.add("This is my pen");
	    l.add("This is my book ");
	    l.add("This seifjava2's Program !");
	    k.add(0,l);
	    l.add("This seifjava2's Program !");
	 
	    for(ArrayList p1:k)
	    {
	        for(int i=0;i<p1.size();i++)
	    System.out.println("["+k.indexOf(p1)+"]"+"["+ p1.indexOf(p1.get(i))+"]  ="+p1.get(i) );
	     
	    ;}
		
		
		
	}
}
